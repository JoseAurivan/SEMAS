@model CadastroHabCMAS.ViewModel.EnderecoViewModels.AlterarEnderecoViewModel

@{
    ViewBag.Title = "Alterar Endereco";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
            background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
        .h4{
        text-align: center;
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="h4">Alterar um Endereco</p>
    <hr>
    <div asp-validation-summary="All"></div>
    <p class="lead">Procure pelo CPF</p>
    <form asp-action="Adicionar" method="post">
        <h6 class="card-subtitle mb-2 text-muted">
            <div asp-validation-summary="All" style="color: red;text-decoration: none;"></div>
        </h6>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">CPF:</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="CPF" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <a href="#">
                            <span class="glyphicon glyphicon-search input-group-text"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <p class="lead">Altere o Endereco</p>
        @{
            //TODO gerar apos encontrar um cpf
        }
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Estado:</label>
                <input type="text" asp-for="Estado" class="form-control" id="validationTooltip01" required placeholder="Nome do Estado" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Cidade:</label>
                <input type="text" asp-for="Cidade" class="form-control" id="validationTooltip01" required placeholder="Nome da Cidade" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Complemento:</label>
                <input type="text" asp-for="Complemento" class="form-control" id="validationTooltip01" required placeholder="Complemento" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Bairro:</label>
                <input type="text"asp-for="Bairro" class="form-control" id="validationTooltip01" required placeholder="Nome do Bairro" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip01">CEP:</label>
                <input type="text" class="form-control" asp-for="Cep" id="validationTooltip01" required placeholder="CEP" required>
            </div>
            <div class="col-md-3 mb-3">
                <label>Tipo de Endereço:</label>
                <select asp-for="TipoEndereco" class="form-select" aria-label="Default select example">
                    <option value="Imovel">Imovel</option>
                    <option value="Correspondencia">Correspondencia</option>
                </select>
            </div>
        </div>
        <button class="btn  btn-outline-success" type="submit">Enviar</button>
        <button class="btn  btn-outline-warning" type="reset">Limpar</button>
    </form>
</div>