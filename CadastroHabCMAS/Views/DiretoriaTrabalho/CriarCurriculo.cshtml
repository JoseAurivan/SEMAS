@using CadastroHabCMAS.Controllers
@model CadastroHabCMAS.ViewModel.DiretoriaDoTrabalhoViewModels.CadastroCurriculoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
            background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
        .h4{
        text-align: center;
        }
        .plus {
          display: block;
          height: 0.7em;
          width: 0.7em;
          font-size: 50px;
          text-align: center;
          line-height: 0;
          margin: 10px;
          padding: 0;
          text-rendering: optimizeLegibility;
          -webkit-font-smoothing: antialiased;
          font-family: Frutiger, "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT", "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif;
          font-weight: lighter;
          color: green;
          background-color: whitesmoke;
        }
        
        .plus::before {
          display: block;
          content: '+';
        }
        .minus {
          display: block;
          height: 0.7em;
          width: 0.7em;
          font-size: 50px;
          text-align: center;
          line-height: 0;
          margin: 10px;
          padding: 0;
          text-rendering: optimizeLegibility;
          -webkit-font-smoothing: antialiased;
          font-family: Frutiger, "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT", "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif;
          font-weight: lighter;
          color: darkred;
          background-color: whitesmoke;
         }
                
        .minus::before {
          display: block;
          content: '-';
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="h4">Cadastro de Curriculo</p>
    <hr>
    <h6 class="card-subtitle mb-2 text-muted">
        <div asp-validation-summary="All" style="color: red;text-decoration: none; border: 10px; background-color: white;"></div>
    </h6>
    <p class="lead">Cadastro de Curriculo</p>
    <form class="needs-validation" novalidate asp-action="CriarCurriculo">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Resumo:</label>
                <input type="text" asp-for="Resumo" class="form-control" id="validationTooltip01" placeholder="Nome completo" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip02">Competências</label>
                <input type="text" asp-for="Competencias" class="form-control"  placeholder="Apenas valores numericos" required>
            </div>
        </div>
        <div class="form-row">
            <label for="validationTooltip02">Adicionar Certificados:</label>
        </div>
        <div class="form-row">
            <button type="button" id="curriculo"  onclick="gerarPaginaCertificado()" class="plus btn btn-dark"></button>
            <button type="button" class="minus btn btn-dark" hidden></button>
        </div>
        <div id="ToChange">

        </div>
        <div class="form-row">
            <label for="validationTooltip02">Adicionar Currículos:</label>
        </div>
        <div class="form-row">
            <button type="button" id="certificado" onclick="gerarPaginaExperiencia()"  class="plus btn btn-dark"></button>
            <button type="button" class="minus btn btn-dark" hidden></button>
        </div>
        <div id="tochange">
            
        </div>
        <button class="btn  btn-outline-success" type="submit">Enviar</button>
        <button class="btn  btn-outline-warning" type="reset">Limpar</button>
    </form>
</div>



@section Scripts
{
    <script>       
        function gerarPaginaCertificado()
        { 
            $('#ToChange').load('@Url.Action("PV_CriarCertificado",Model)');                                             
        }        
        function gerarPaginaExperiencia()
        {          
            $('#tochange').load('@Url.Action("PV_CriarExperiencia",Model)');   
        }
    </script>
}


