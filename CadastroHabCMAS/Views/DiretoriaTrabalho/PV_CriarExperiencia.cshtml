@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
            background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
        .h4{
        text-align: center;
        }

        
    </style>
</head>
<div class="form--cadastro">
    <p class="h4">Cadastro de Curriculo</p>
    <hr>
    <h6 class="card-subtitle mb-2 text-muted">
        <div asp-validation-summary="All" style="color: red;text-decoration: none; border: 10px; background-color: white;"></div>
    </h6>
    <p class="lead">Cadastro de Experiências</p>
    <form class="needs-validation" novalidate asp-action="CriarCurriculo">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Local:</label>
                <input type="text" class="form-control" id="validationTooltip01" placeholder="Local de Experiência" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip02">Descricação:</label>
                <input type="text" class="form-control" id="cpf" placeholder="Descricação da Experiencia" required>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Data de Inicio da experiência:</label>
                <div class="input-group mb-3">
                    <input type="date" class="form-control" id="nis" placeholder="dd/mm/aaaa" aria-label="Recipient's username">
                </div>
            </div>
        </div>


        <button class="btn  btn-outline-success" type="submit">Enviar</button>
        <button class="btn  btn-outline-warning" type="reset">Limpar</button>
    </form>
</div>