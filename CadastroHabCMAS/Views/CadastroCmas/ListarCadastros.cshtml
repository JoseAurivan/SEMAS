@using System.Linq
@model CadastroHabCMAS.ViewModel.CadastroCMASViewModels.ListarCadastrosViewModel

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
           background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
        .h4{
        text-align: center;
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="h4">Cadastros efetuados na SEMAS</p>
    <hr>
    <div asp-validation-summary="All"></div>
    @for (int i = 0; i < Model.CadastroCmasList.Count; i++)
    {
        <p class="lead">Cadastro</p>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">NOME:</label>
                <div class="input-group mb-3">
                    <input type="text" asp-for="CadastroCmasList[i].Pessoa.Nome" class="form-control" id="nis" placeholder="CPF" aria-label="Recipient's username" readonly>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">CPF:</label>
                <div class="input-group mb-3">
                    <input type="text" asp-for="CadastroCmasList[i].Pessoa.Cpf" class="form-control" id="cpf" placeholder="CPF" aria-label="Recipient's username" readonly>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">NIS:</label>
                <div class="input-group mb-3">
                    <input type="text" asp-for="CadastroCmasList[i].Pessoa.CadastroCmas.Nis" class="form-control" id="nis" placeholder="NIS" aria-label="Recipient's username" readonly>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Quantidade Cestas:</label>
                <div class="input-group mb-3">
                    <input type="text" asp-for="CadastroCmasList[i].Endereco.Cesta.Quant" class="form-control" id="cpf" placeholder="Quantidade Cestas" aria-label="Recipient's username" readonly>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Numero de Entregas das Cestas:</label>
                <div class="input-group mb-3">
                    <input type="text" asp-for="CadastroCmasList[i].Endereco.Cesta.NumeroMeses" class="form-control" id="cpf" placeholder="Numero Entregas" aria-label="Recipient's username" readonly>
                </div>
            </div>
        </div>

        @if (Model.CadastroCmasList[i].Endereco is not null)
        {
            @if (Model.CadastroCmasList[i].Endereco.Cesta is not null)
            { 
                @if (Model.CadastroCmasList[i].Endereco.Cesta.Demandas is not null)
                {
                    <div class="form-row">
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip01">Demanda:</label>
                            <div class="input-group mb-3">
                                <input type="text" asp-for="CadastroCmasList[i].Endereco.Cesta.Demandas" class="form-control" id="cpf" placeholder="Numero Entregas" aria-label="Recipient's username" readonly>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <label>Demanda não especificada</label>
                }
                @if (Model.CadastroCmasList[i].Endereco.Cesta.Entregas.Count > 0)
                {
                    <p class="lead">Entregas</p>
                    @for (int j = 0; j < Model.CadastroCmasList[i].Endereco.Cesta.Entregas.Count; j++)
                    {
                        <div class="form-row">
                            <div class="col-md-3 mb-3">
                                <label for="validationTooltip01">Unidade da Entrega:</label>
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="CadastroCmasList[i].Endereco.Cesta.Entregas.ElementAt(j).Unidade" class="form-control" id="nis" placeholder="CPF" aria-label="Recipient's username" readonly>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationTooltip01">Agente da Entrega:</label>
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="CadastroCmasList[i].Endereco.Cesta.Entregas.ElementAt(j).NomeAgente" class="form-control" id="nis" placeholder="CPF" aria-label="Recipient's username" readonly>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationTooltip01">Data da Entrega:</label>
                                <div class="input-group mb-3">
                                    <input type="date" asp-for="CadastroCmasList[i].Endereco.Cesta.Entregas.ElementAt(j).DataEntrega" class="form-control" id="nis" placeholder="CPF" aria-label="Recipient's username" readonly>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationTooltip01">Status da Entrega:</label>
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="CadastroCmasList[i].Endereco.Cesta.Entregas.ElementAt(j).EntregaStatus" class="form-control" id="nis" placeholder="CPF" aria-label="Recipient's username" readonly>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        }
        <form asp-action="ListarCadastros" method="post">
            <input asp-for="PessoaID" value="@Model.CadastroCmasList[i].PessoaId" hidden readonly>
            <input type="submit" class="btn-outline-primary" value="Verificar">
        </form>
        <hr>
    }
</div>