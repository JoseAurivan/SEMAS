@using System.Linq
@model CadastroHabCMAS.ViewModel.CestasBasicasViewModels.VisualizarCestaBasicaViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Relatorio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        input{
            text-decoration: none;
            font-weight: bold;
            border: none;           
        }
        input:focus{
            outline: none;
        }
    </style>
</head>
<body>
<div style="margin-left: 80px; margin-right: 80px">
    <h3 style="text-decoration: underline" class="text-center">DECLARAÇÃO DE RECEBIMENTO</h3>
    <br><br><br>
    <p>
        Eu, <input asp-for="Nome" id="nome">, residente e domiciliado em: <input asp-for="Complemento" id="complemento">,
        Bairro: <input asp-for="Bairro" id="bairro">, CEP: <input asp-for="Cep" id="cep"> eportador do CPF: <input asp-for="Cpf" id="cpf"> .
        Declaro que recebi da Secretaria de Assistência Social (SEMAS) o benefício eventual de auxílio alimentação,
        por meio do agente: <input asp-for="NomeDoAgente" id="nomeAgente">
        que pertence a unidade: <input asp-for="NomeDaUnidade" id="nomeUnidade">.<br>
        Firmo presente em Porto Nacional/TO, __/__/____
    </p>

    <br><br><br><br><br>

    <hr style="border: 1px solid black">
    <p class="text-center">Assinatura do Beneficiário</p>
    <br>
    <hr style="border: 1px solid black">
    <p class="text-center">Assinatura do Responsável</p>
    <br>
    <hr style="border: 1px solid black">
    <p class="text-center">Testemunha(Demanda COVID-19)</p>
</div>
</body>
<script>
    window.onload = function() {
     document.getElementById("nome").setAttribute('size',document.getElementById("nome").value.length);
     document.getElementById("complemento").setAttribute('size',document.getElementById("complemento").value.length);
     document.getElementById("bairro").setAttribute('size',document.getElementById("bairro").value.length);
     document.getElementById("cep").setAttribute('size',document.getElementById("cep").value.length);
     document.getElementById("cpf").setAttribute('size',document.getElementById("cpf").value.length);
     document.getElementById("nomeAgente").setAttribute('size',document.getElementById("nomeAgente").value.length);
     document.getElementById("nomeUnidade").setAttribute('size',document.getElementById("nomeUnidade").value.length);
     window.print();
    };
</script>
</html>