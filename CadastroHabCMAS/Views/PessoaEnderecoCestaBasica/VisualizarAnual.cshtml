@model CadastroHabCMAS.ViewModel.CestasBasicasViewModels.VisualizarAnualViewModel

@{
    ViewBag.Title = "Relatorio Mensal";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
          background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }

    </style>
</head>
<div class="form--cadastro">
    <p class="h3">Gerar Relatório de Controle</p>
    <hr>
    <h6 class="card-subtitle mb-2 text-muted">
        <div asp-validation-summary="All" style="color: red;text-decoration: none;"></div>
    </h6>
    <form asp-action="VisualizarAnual" method="post">
        <p class="h4">Gerar Relatórios Anuais por Unidade</p>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">Unidade SEMAS:</label>
                <div class="input-group mb-3">
                    <select asp-for="Unidade" class="form-select">
                        <option value="CrasUniao">CRAS União</option>
                        <option value="CrasEsperanca">CRAS Esperanca</option>
                        <option value="CrasSantinoDiasAlecrim">CRAS Santino Dias Alecrim</option>
                        <option value="NucleodeAssistenciaSocial">Núcleo de Assistência Social</option>
                        <option value="AssistenciaCovid">Assistência COVID</option>
                    </select>
                </div>
                <label for="validationTooltip01"> Ano:</label>
                <div class="input-group mb-3">
                    <input type="number" asp-for="Ano" min="2021" value="2021" class="form-control">
                </div>
            </div>
        </div>
        <input type="submit" class="btn-info" value="Gerar Relatório"/>
    </form>

    <form asp-action="RelatorioGeralAnual" method="post">
        <p class="h4">Gerar Relatório Anual Geral</p>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01"> Ano:</label>
                <div class="input-group mb-3">
                    <input type="number" asp-for="Ano" min="2021" value="2021" class="form-control">
                </div>
            </div>
        </div>
        <input type="submit" class="btn-info" value="Gerar Relatório"/>
    </form>
</div>