@model CadastroHabCMAS.ViewModel.UserViewModel.UserLoginViewModel

@{
    ViewBag.Title = "Meu Perfil";
    Layout = "_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
     body{
        background-color: #006e80;
     }
      .form--login{
       text-align: center;                    
      }
      form{
       display: inline-block;
       padding: 25px 25px 25px 25px;
       border-radius: 5px;
      }
      label{
       color: #E8EEF1;
      }
      .card-body{
        margin: 10px 10px 10px 10px;
      }
      .card{
        background-color:#E8EEF1;
      }
      .card-header{
        background-color:#c9ced1;
        color: #006e80;
      }
    </style>
    <title>Login</title>
</head>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
          background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="lead">Meu Perfil</p>
    <form class="needs-validation" novalidate>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationTooltip01">Matricula:</label>
                <input type="text" class="form-control" id="validationTooltip01" readonly >
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationTooltip02">CPF:</label>
                <input type="text" class="form-control" id="validationTooltip02" readonly asp-for="Username">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationTooltip03">Email:</label>
                <input type="email" class="form-control" id="validationTooltip03" readonly value="puxa do cookie">
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationTooltip04">Senha:</label>
                <input type="password" class="form-control" id="validationTooltip04"  readonly asp-for="Password">
            </div>
        </div>
        <button type="button" class="btn btn-outline-primary" asp-action="">Alterar Senha</button>
        <button type="button" class="btn btn-outline-secondary" asp-action="">Alterar Email</button>
    </form>
</div>