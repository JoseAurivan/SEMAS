@model CadastroHabCMAS.ViewModel.UserViewModel.UserCreateViewModel

@{
    Layout = null;
}

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <title>Cadastro</title>
    <style>
         body{
            background-color: #006e80;
         }
       .form--login{
        text-align: center;                    
       }
       form{
        display: inline-block;
        padding: 25px 25px 25px 25px;
        border-radius: 5px;
       }
       label{
        color: #E8EEF1;
       }
       .card{
               background-color:#E8EEF1;
             }
             .card-header{
               background-color:#c9ced1;
               color: #006e80;
             }
             span{
               color: #006e80;
             }
       </style>

</head>

<div class="form--login">
    <form method="post" asp-action="CriarUser">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Cadastro de Servidor
            </div>
            <img class="card-img-top img-fluid" src="~/Prefeitura/LogoPrefeitura.png" alt=" ">

            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">
                    <div asp-validation-summary="All" style="color: red;text-decoration: none;"></div>
                </h6>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">CPF</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Username" required aria-describedby="basic-addon1" asp-for="Cpf">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Email</span>
                    </div>
                    <input type="email" class="form-control" aria-label="Username" required aria-describedby="basic-addon1" asp-for="Email">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon2">Matricula</span>
                    </div>
                    <input type="text" class="form-control" required aria-label="Matricula" aria-describedby="basic-addon2" asp-for="Matricula">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3">Senha</span>
                    </div>
                    <input type="password" class="form-control" required aria-label="Senha" aria-describedby="basic-addon3" asp-for="Senha">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Já possuo conta. <a asp-action="Index" class="card-link">Fazer Login</a>
                    </li>
                </ul>
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <input type="reset" class="btn btn-danger">

            </div>
        </div>
    </form>

</div>