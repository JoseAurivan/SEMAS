@using Microsoft.AspNetCore.Http
@using Domain.Enums
@model CadastroHabCMAS.ViewModel.UserViewModel.UserLoginViewModel;
@{
    ViewData["Title"] = "Painel de Controle";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
            background-color: #E8EEF1;
        }
        .flex-container{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-content:space-around;
        }
        .flex-container > div{
            margin: 10px;
            color: #E8EEF1;
        }
        .card-header{
            background-color:#006e80;
        }
        .card{
            background-color: #51a8b1;   
        }
        #fazenda-header{
            background-color: #1e7e34;
        }
        #fazenda-body{
            background-color: #28b61f;
        }
        #dois-header {
            background-color: #e0a800;
        }
        #dois-body {
            background-color: #e6c60d;
        }
        #trabalho-header{
            background-color: #6A5ACD;    
        }
        #trabalho-body{
            background-color: #9370DB;                        
        }
    </style>
</head>
<div class="flex-container">

    <div class="card" style="width: 18rem;">
        <div class="card-header" id="dois-header">
            Cadastro de Pessoas
        </div>
        <div class="card-body" id="dois-body">
            <p class="card-text">Insira os dados pessoais e o endereço da pessoa para registrar ambos.</p>
            <a asp-controller="PessoaEnderecoCestaBasica" asp-action="AdicionarPessoa" class="btn btn-outline-light">Registrar</a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <div class="card-header" id="dois-header">
            Alterar Cadastro
        </div>
        <div class="card-body" id="dois-body">
            <p class="card-text">Altere o Cadastro de uma pessoa já cadastrada em nosso sistema</p>
            <a asp-controller="PessoaEnderecoCestaBasica" asp-action="Alterar" class="btn btn-outline-light">Alterar</a>
        </div>
    </div>
    @if (Model.Role == Roles.Fazenda || Model.Role == Roles.Adminstrador)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-header" id="fazenda-header">
                Adicionar Endereço
            </div>
            <div class="card-body" id="fazenda-body">
                <p class="card-text">Adicione um Endereço a uma pessoa já cadastrada em nosso sistema</p>
                <a asp-controller="PessoaEnderecoCestaBasica" asp-action="Adicionar" class="btn btn-outline-light">Registrar</a>
            </div>
        </div>
    }
    @if (Model.Role == Roles.Semas || Model.Role == Roles.Adminstrador)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Cadastro da SEMAS
            </div>
            <div class="card-body">
                <p class="card-text">Cadastre uma pessoa ja existente na SEMAS para recebimento de cestas basicas</p>
                <a asp-controller="CadastroCmas" asp-action="Adicionar" class="btn btn-outline-light">Registrar</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Adicionar uma cesta básica
            </div>
            <div class="card-body">
                <p class="card-text">Conceda uma cesta básica a uma pessoa que já possui um cadastro na SEMAS.</p>
                <a asp-controller="PessoaEnderecoCestaBasica" asp-action="AdicionarCestaBasica" class="btn btn-outline-light">Registrar</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Verificar todos os cadastros
            </div>
            <div class="card-body">
                <p class="card-text">Veja o CPF e o NIS de todos os cadastrados em nosso sistema e insira informações das entregas</p>
                <a asp-controller="CadastroCmas" asp-action="ListarCadastros" class="btn btn-outline-light">Registrar</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Gerar Declaração de Recebimento e Fichas de Cadastro
            </div>
            <div class="card-body">
                <p class="card-text">Veja e/ou gere relatórios das pessoas que foram contempladas com cestas basicas ou suas fichas de cadastro</p>
                <a asp-controller="PessoaEnderecoCestaBasica" asp-action="Visualizar" class="btn btn-outline-light">Gerar</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Consultar Relatório Mensal de Cestas Básicas
            </div>
            <div class="card-body">
                <p class="card-text">Veja e/ou gere relatórios das pessoas que foram contempladas com cestas basicas de uma determinada unidade em um determinado Mês</p>
                <a asp-controller="PessoaEnderecoCestaBasica" asp-action="VisualizarMensal" class="btn btn-outline-light">Consultar</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Consultar Relatório Anual de Cestas Básicas
            </div>
            <div class="card-body">
                <p class="card-text">Veja e/ou gere relatórios das pessoas que foram contempladas com cestas basicas de uma determinada unidade em um determinado Ano</p>
                <a asp-controller="PessoaEnderecoCestaBasica" asp-action="VisualizarAnual" class="btn btn-outline-light">Consultar</a>
            </div>
        </div>
    }
    @if (Model.Role == Roles.Trabalho || Model.Role == Roles.Adminstrador)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-header" id="trabalho-header">
                Cadastrar um curriculo de uma Pessoa
            </div>
            <div class="card-body" id="trabalho-body">
                <p class="card-text">Cadastre um currículo para uma determinada pessoa</p>
                <a asp-controller="DiretoriaTrabalho" asp-action="CriarCurriculo" class="btn btn-outline-light">Criar</a>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <div class="card-header" id="trabalho-header">
                Alterar um curriculo de uma Pessoa
            </div>
            <div class="card-body" id="trabalho-body">
                <p class="card-text">Altere um currículo para uma determinada pessoa</p>
                <a class="btn btn-outline-light">Alterar</a>
            </div>
        </div>
    }    
    
</div>