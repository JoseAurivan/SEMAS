@model CadastroHabCMAS.Views.Home.Panel

@{
    ViewData["Title"] = "Painel de Controle";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="css/site.css" rel="stylesheet">
    <style>
        body{
            background-color: #d6d6d6;
        }
        .flex-container{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-content:space-around;
        }
        .flex-container > div{
            margin: 10px;
            color: #E8EEF1;
        }
        .card-header{
            background-color:#006e80;
        }
        .card{
         background-color: #51a8b1;   
        }
    </style>
</head>
<div class="flex-container">
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            Cadastro de Pessoas
        </div>
        <div class="card-body">

            <p class="card-text">Insira os dados pessoais e o endereço da pessoa para registrar ambos.</p>
            <a href="#" class="btn btn-outline-light">Registrar</a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            Cadastro do CMAS
        </div>
        <div class="card-body">


            <p class="card-text">Cadastre uma pessoa ja existente no CMAS para recebimento de cestas basicas</p>
            <a href="#" class="btn btn-outline-light">Registrar</a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            Visualizar cestas básicas
        </div>
        <div class="card-body">

            <p class="card-text">Veja a situação das pessoas que foram contempladas com cestas basicas</p>
            <a href="#" class="btn btn-outline-light">Visualizar</a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            Alterar endereço de uma pessoa
        </div>
        <div class="card-body">

            <p class="card-text">Altere um endereço de uma pessoa ja cadastrada.</p>
            <a href="#" class="btn btn-outline-light">Visualizar</a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
            <div class="card-header">
                Adicionar endereço de uma pessoa
            </div>
            <div class="card-body">
    
                <p class="card-text">Adicione um outro endereço a uma pessoa ja cadastrada.</p>
                <a href="#" class="btn btn-outline-light">Registrar</a>
            </div>
        </div>
</div>