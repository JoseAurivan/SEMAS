@model CadastroHabCMAS.ViewModel.UserViewModel.UserEditPasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
          background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="lead">Alterar Senha</p>
    <form asp-action="MudarSenha" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="validationTooltip01">Senha Antiga:</label>
            <input type="password" class="form-control" asp-for="OldPassword" id="validationTooltip01">
        </div>
    </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationTooltip02">Senha Nova:</label>
                <input type="password" class="form-control" id="validationTooltip02" asp-for="NewPassword">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationTooltip03">Verficar Senha Nova:</label>
                <input type="password" asp-for="NewPasswordVerify" class="form-control" id="validationTooltip03">
            </div>
            <div class="col-md-4 mb-3">
                <input type="text" hidden readonly asp-for="Id" class="form-control" id="validationTooltip03">
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success">Mudar Senha</button>
        <button asp-action="MyPage" class="btn btn-outline-primary">Voltar</button>
    </form>
</div>