@model CadastroHabCMAS.ViewModel.UserViewModel.UserEditEmailViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
          background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="lead">Alterar Email</p>
    <form asp-action="MudarEmail" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="validationTooltip01">Email novo:</label>
            <input type="email" class="form-control" asp-for="NewEmail" id="validationTooltip01">
        </div>
    </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationTooltip02">Verificar Email novo:</label>
                <input type="email" class="form-control" id="validationTooltip02" asp-for="NewEmailVerify">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <input type="text" hidden  readonly asp-for="Id" class="form-control" id="validationTooltip03">
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary">Mudar Email</button>

    </form>
</div>
