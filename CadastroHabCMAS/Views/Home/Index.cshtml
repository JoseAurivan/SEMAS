@model CadastroHabCMAS.ViewModel.UserViewModel.UserLoginViewModel

@{
    Layout = null;
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
     body{
        background-color: #006e80;
     }
      .form--login{
       text-align: center;                    
      }
      form{
       display: inline-block;
       padding: 25px 25px 25px 25px;
       border-radius: 5px;
      }
      label{
       color: #E8EEF1;
      }
      .card-body{
        margin: 10px 10px 10px 10px;
      }
      .card{
        background-color:#E8EEF1;
      }
      .card-header{
        background-color:#c9ced1;
        color: #006e80;
      }
    </style>
    <title>Login</title>
</head>
<body>
<div class="form--login">
    <form method="post" asp-action="Login">

        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Login de Servidor
            </div>
            <img class="card-img-top img-fluid" src="~/Prefeitura/LogoPrefeitura.png" alt=" ">

            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">
                    <div asp-validation-summary="All" style="color: red; text-decoration: none"></div>
                </h6>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="cpf">CPF</span>
                    </div>
                    <input type="text" required style="background-color: white" class="form-control" aria-label="Username" aria-describedby="basic-addon1" id="cpf" asp-for="Username">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon2">Senha</span>
                    </div>
                    <input type="password" required style="background-color: white" class="form-control" aria-label="Username" aria-describedby="basic-addon1" asp-for="Password">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Não possuo conta. <a asp-action="CriarUser" class="card-link">Criar conta</a>
                    </li>
                    <li class="list-group-item">
                        <a asp-action="Esqueci" class="card-link">Esqueci minha senha</a>
                    </li>
                </ul>
                <button type="submit" class="btn btn-success">Login</button>
                <button type="reset" class="btn btn-danger">Resetar</button>

            </div>
        </div>
    </form>
</div>
</body>