@model CadastroHabCMAS.ViewModel.UserViewModel.UserEsqueciViewModel

@{
    ViewBag.Title = "Esqueci minha senha";
    Layout = null;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
     body{
        background-color: #006e80;
     }
      .form--login{
       text-align: center;                    
      }
      form{
       display: inline-block;
       padding: 25px 25px 25px 25px;
       border-radius: 5px;
      }
      label{
       color: #E8EEF1;
      }
      .card-body{
        margin: 10px 10px 10px 10px;
      }
      .card{
        background-color:#E8EEF1;
      }
      .card-header{
        background-color:#c9ced1;
        color: #006e80;
      }
    </style>
    <title>Login</title>
</head>
<div class="form--login">
    <form method="post" asp-action="Esqueci">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Esqueci minha senha
            </div>
            <img class="card-img-top img-fluid" src="~/Prefeitura/LogoPrefeitura.png" alt=" ">

            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">
                    <div asp-validation-summary="All" style="color: red; text-decoration: none"></div>
                </h6>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Email</span>
                    </div>
                    <input type="email" required style="background-color: white" class="form-control" aria-label="Username" aria-describedby="basic-addon1" id="email" asp-for="Email">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Retornar <a asp-action="Index" class="card-link">a página principal.</a>
                    </li>
                </ul>
                <button type="submit" class="btn btn-success">Enviar</button>

            </div>
        </div>
    </form>
</div>