@using CadastroHabCMAS.Controllers
@{
    ViewBag.Title = "Adicionar Endereco";
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body{
            background-color: #E8EEF1;
        }
        .form--cadastro{
          margin: 40px 40px 40px 40px;
        }
        div > label{
          color: black;
        }
        button{
          margin-top: 15px;
        }
        .h4{
        text-align: center;
        }
    </style>
</head>
<div class="form--cadastro">
    <p class="h4">Adicionar um Endereco</p>
    <hr>
    <p class="lead">Procure pelo CPF</p>
    
        <h6 class="card-subtitle mb-2 text-muted">
            <div asp-validation-summary="All" style="color: red;text-decoration: none;"></div>
        </h6>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="validationTooltip01">CPF:</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="pessoaCPF" placeholder="CPF" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <input type="text" class="form-control" id="typeOf" value="add" hidden>
                    <div class="input-group-append">
                        <a href="#">
                            <span onclick="encontrarCPF()" class="glyphicon glyphicon-search input-group-text"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div id="ToChange">
            
        </div>


    

    
    @section Scripts
    {
        <script>
        let urlPessoaEndereco;
        function init(url) {
            urlPessoaEndereco = url;    
        }
        
        $(document).ready(function() {
          let url = "@Url.Action(nameof(PessoaEnderecoController.EncontrarCpf))";
          init(url);
        });
        
        function encontrarCPF() {
            console.log(urlPessoaEndereco)
            let cpf = document.getElementById("pessoaCPF").value;
            let typeOf = document.getElementById("typeOf").value;
            console.log(cpf)
            $.ajax({      
                type: "POST",
                url: urlPessoaEndereco,
                data: {"cpf":cpf, "typeOf":typeOf},
                success: function(response) {
                       $('#ToChange').html(response)                   
                }
            });    
        }   
        </script>
    }
</div>